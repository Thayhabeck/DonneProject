@model DonneProject.Models.CadastroParceiro

@{
    ViewData["Title"] = "Edit";
}

<h3 class="m-4 text-center">O que deseja editar sobre a Parceria?</h3>

<hr />
<h4 class="m-4">Parceiro</h4>
<div class="container-fluid d-inline-flex">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group font-weight-bold">
                <label asp-for="RZsocial" class="control-label">Razão Social</label>
                <input asp-for="RZsocial" class="form-control" />
                <span asp-validation-for="RZsocial" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold">
                <label asp-for="Nome" class="control-label">Nome do Representante</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold">
                <label asp-for="cnpj" class="control-label">CNPJ</label>
                <input asp-for="cnpj" class="form-control" />
                <span asp-validation-for="cnpj" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold">
                <label asp-for="email" class="control-label">E-mail</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group font-weight-bold">
                <label asp-for="NomeAreaId" class="control-label">Área de Atuação</label>
                <select asp-for="NomeAreaId" class="form-control" asp-items="ViewBag.NomeAreaId"></select>
                <span asp-validation-for="NomeAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="ml-4" asp-action="Index">Ver a Lista Completa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
