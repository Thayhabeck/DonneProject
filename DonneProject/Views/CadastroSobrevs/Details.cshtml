@model DonneProject.Models.CadastroSobrev

@{
    ViewData["Title"] = "Details";
}

<h3 class="m-4 text-center">O que deseja saber sobre a sobrevivente?</h3>

<div class="container-fluid">
    <h4>Sobrevivente:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            CPF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cpf)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-2">
            Função a Desempenhar
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFuncao.NomeFuncao)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info ml-2" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Lista Completa</a>
</div>
